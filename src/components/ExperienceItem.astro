---
export interface Props {
  company: string;
  position: string;
  startDate: string;
  endDate: string;
  description: string;
}

const { company, position, startDate, endDate, description } = Astro.props as Props;
---

<div
  class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"
></div>

<time
  class="mb-1 text-sm font-normal leading-none text-sky-200/80"
>
  {startDate} - {endDate}
</time>
<h3 class="text-lg font-semibold text-yellow-200/90 mt-2">
  {company} - {position}
</h3>
<p class="mb-4 text-base font-normal text-gray-200 text-pretty">
  {description}
</p>
